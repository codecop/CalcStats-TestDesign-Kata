{
    "name": "sammancoaching/calcstats",
    "require": {
        "php": ">=7.3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "9.6.*",
        "infection/infection": "^0.28.1"
    },
    "autoload": {
        "psr-4": {
            "CodingDojo\\": "src\/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "test\/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "tests": "phpunit",
        "infection": "infection --threads=4 --only-covered --show-mutations"
    },
    "config": {
        "allow-plugins": {
            "infection/extension-installer": true
        }
    }
}
